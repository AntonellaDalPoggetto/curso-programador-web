<div class="container" style="margin: 100px 0">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la maquina</h4>
            <form action="/admin/maquinas/modificar" method="post" enctype="multipart/form-data">
            <input type="hidden" value="{{maquina.id}}" name="id">
            <div class="form-group">
                <label for="">Titulo</label>
                <input type="text" class="form-control" name="titulo" value="{{maquina.titulo}}">
                </div>
                <div class="form-group">
                    <label for="">Cuerpo</label>
                    <textarea name="cuerpo" class="form-control">{{maquina.cuerpo}}</textarea>
                </div>
                    <div class="row">
            <div class="form-group">
                <p>
                    <br><label>Imagen: </label><br>
                    <input type="file" name="imagen" id="imagen">
                </p>
                <p>
                    <label><input type="checkbox" name="img_delete" id="img_delete" value="1"> Â¿Eliminar imagen
                        actual?</label>
                    <input type="hidden" name="img_original" value="{{maquina.img_id}}">
                </p>
            </div>
        </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>