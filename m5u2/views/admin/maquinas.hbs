<div class="container" style="margin-top: 150px;">
    <div class="row">
        <div class="col">
            <p class="text-end">
                <span>Hola {{usuario}}</span>
                <a href="/admin/login/logout" class="btn btn-danger">cerrar sesion <i class="fas fa-sign-out-alt"></i></a>
            </p>
        </div>
    </div>
    <div class="row">
    <div class="col-7" style="margin-top: -9px;">
        <h2>Listado de maquinas</h2>
    </div>
    <div class="col-5 text-end">
        <a href="/admin/maquinas/agregar" class="btn btn-primary"><i class="fas fa-plus"></i>
        nuevo</a>
    </div>
</div>
</div>

<div class="row">
    <div class="col">
        <table class="table">
  <thead class="thead-primary">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Titulo</th>
      <th scope="col" class="text-center">Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each maquinas}}
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{titulo}}</td>
      <td class="text-center">
        <a href="/admin/maquinas/modificar/{{id}}" class="btn btn-primary"> <i class="fas fa-pencil-alt"></i></a>
        <a href="/admin/maquinas/eliminar/{{id}}" class="btn btn-primary"><i class="fas fa-trash"></i></a>
      </td>
      {{/each}}
    </tr>
    
  </tbody>
</table>
    </div>
</div>

